<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTeatar.Web</title>
    <link rel="stylesheet" href="/css/main.css" />

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>

    <script src="~/js/Ajax.js"></script>
</head>
<body>
    <div id="Wrapper">

        <div id="Header">
            <div id="UpperHeader">
                <div id="LogoDiv" class="btn" onclick="Redirect('/')">
                    <img id="Logo" src="~/images/Header-Logo-Image.svg">
                    <span id="LogoText" class="vertical-center">eTeatar</span>
                </div>

                <div id="UserDiv">
                    <div onclick="Redirect('/Login')" id="Login" class="btn">Login</div>
                    <div onclick="Redirect('/Register')" id="Register" class="btn">Register</div>
                </div>
            </div>

            <div id="LowerHeader">
                <div class="btn" onclick="Redirect('/Predstave')" >Predstave</div>
                <div class="btn" onclick="Redirect('/Termini')" >Termini</div>
                <div class="btn" onclick="Redirect('/Novosti')" >Novosti</div>
                <div class="btn" onclick="Redirect('/ONama')" >O nama</div>
            </div>
        </div>

        <div id="Content">

            @RenderBody()

        </div>

    </div>

</body>
</html>

<script>
    function Redirect(Link) { window.location.href = Link }
</script>